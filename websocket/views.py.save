def _parse_body(body):
    body_unicode = body.decode('utf-8')
    return json.loads(body_unicode)

@csrf_exempt
def connect(request):
    body = _parse_body(request.body)
    connection_id = body['connectionId']
    CreateConnection.objects.create(connection_id=connection_id)
    response = {
        "statusCode": 200,
        "body": "Connecte succesfully"
    }
    # return response
    return JsonResponse('connect successfully', status=200, safe=False)

@csrf_exempt
def disconnect(request):
    body = _parse_body(request.body)
    connection_id = body['connectionId']
    CreateConnection.objects.get(connection_id=connection_id).delete()
    return JsonResponse('disconnect successfully', status=200, safe=False)

